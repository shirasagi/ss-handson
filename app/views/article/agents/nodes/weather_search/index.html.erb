<%= form_tag @cur_node.url, method: "get" do |f| %>
  <h2><%= t("modules.addons.cms/weather") %></h2>
  <div class="weather">
    <% weathers = params[:weathers] || [] %>
    <% %w(sunny cloudy rain snow).each do |code| %>
      <label><%= check_box_tag 'weathers[]', code, weathers.include?(code) %><%= t("cms.options.weather.#{code}") %></label>
    <% end %>
  </div>
  <footer class="send">
    <%= submit_tag t("ss.buttons.search"), name: nil %>
    <%= link_to t("ss.buttons.reset"), @cur_node.url, class: 'btn' %>
  </footer>
<% end %>

<% if @items.present? %>
  <div class="pages">
    <%= render_page_list %>
  </div>

  <%= paginate @items if @items.try(:current_page) %>
<% end %>
